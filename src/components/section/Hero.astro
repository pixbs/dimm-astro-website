---
import Social from '@components/elements/Social.astro'
import Tiles from '@components/elements/Tiles.astro'
---

<section class='relative'>
	<div
		class='hero cont-m justify-between gap-half border-b border-foreground pb-tile pt-double lg:gap-tile'
	>
		<div class='round-h flex-shrink-0'>
			<slot name='title' class='animate-fade-in opacity-0' />
		</div>
		<div class='justify-between gap-half lg:flex-row lg:items-center'>
			<slot class='animate-fade-in opacity-0 lg:h-auto lg:w-sextuple' />
			<button
				class='hidden h-tile w-full animate-fade-in flex-row items-center justify-center gap-half rounded-full bg-foreground uppercase text-background opacity-0 lg:w-quad'
			>
				<slot name='button' />
			</button>
			<div class='flex-row'>
				<Social />
			</div>
		</div>
	</div>
	<Tiles />
</section>
